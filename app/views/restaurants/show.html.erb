<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p>Category :<%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>
 <p><%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant),class: "btn btn-primary" %></p>
 <p><%= link_to "All restaurants", restaurants_path, class: "btn btn-primary" %></p>
 <p><%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %></li>
  <% end %>
</ul>

