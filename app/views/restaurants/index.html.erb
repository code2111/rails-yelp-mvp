<h1>Here are all the restaurants:</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant), class: "btn btn-primary"%> - Category <%= restaurant.category.capitalize %></li>
     <%= link_to restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" do %>
        <i class="fa fa-trash"></i>
     <% end %>
    <% end %>
  </ul>


  <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>



